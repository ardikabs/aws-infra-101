{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EnforcedTLS",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::tf-state-123456789012",
        "arn:aws:s3:::tf-state-123456789012/*"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    },
    {
      "Sid": "RootAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::123456789012:root"
      },
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::tf-state-123456789012",
        "arn:aws:s3:::tf-state-123456789012/*"
      ]
    }
  ]
}
